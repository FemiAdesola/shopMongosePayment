<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/styles/product.css">
</head>
<body>
   <%- include('../includes/nav.ejs') %>
    <main>
        <% if (prod.length > 0) { %>
            <div class="grid">
                <% for (let product of prod) { %>  
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= product.title %></h1>
                            </header>
                            <div class="card__image">
                                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">â‚¬ <%= product.price %></h2>
                                <p class="product__description"><%= product.description %></p>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                <input type="hidden" value="<%= product._id %>" name="productDeleteId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                 <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>                             
                            </div>
                        </article>
                    <% } %>
                </div>
                <%- include('../includes/pagination.ejs') %>  
        <% } else { %>
            <h1>No Products Found</h1>
        <% } %>
    </main>
<%- include('../includes/body.ejs') %>
<script src="/js/admin.js"></script>
